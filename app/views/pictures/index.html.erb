<h2>投稿一覧</h2>

<table>
  <tr>
    <th>ユーザ名</th>
    <th>本文</th>
    <th>画像</th>
  </tr>

  <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.user.name %></td>
      <td><%= picture.content %></td>
      <td><%= image_tag picture.image.url, :size =>'100x100' %></td>

      <td><%= link_to '詳細', picture_path(picture.id) %></td>
      <td><%= link_to '編集', edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to '削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
  <% end %>
</table>